<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Group?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" 
            prefHeight="700.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/17" 
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="co.edu.poli.actividad.controlador.MonedaControlador">
   <children>
      <Label fx:id="lbl1" layoutX="50.0" layoutY="30.0" text="Serial:" />
      <TextField fx:id="txt1" layoutX="150.0" layoutY="26.0" prefWidth="200.0" />
      
      <Label fx:id="lbl2" layoutX="50.0" layoutY="70.0" text="Material:" />
      <TextField fx:id="txt2" layoutX="150.0" layoutY="66.0" prefWidth="200.0" />
      
      <Label layoutX="50.0" layoutY="110.0" text="Tamaño:" />
      <TextField fx:id="txt3" layoutX="150.0" layoutY="106.0" prefWidth="200.0" />
      
      <Label layoutX="50.0" layoutY="150.0" text="Valor:" />
      <TextField fx:id="txt4" layoutX="150.0" layoutY="146.0" prefWidth="200.0" />
      
      <Label layoutX="400.0" layoutY="30.0" text="Año Creación:" />
      <TextField fx:id="txt5" layoutX="500.0" layoutY="26.0" prefWidth="150.0" />
      
      <Label layoutX="400.0" layoutY="70.0" text="Tipo:" />
      <ComboBox fx:id="cmb1" layoutX="500.0" layoutY="66.0" prefWidth="200.0" />
      
      <Label layoutX="400.0" layoutY="110.0" text="Rareza:" />
      <ComboBox fx:id="cmb2" layoutX="500.0" layoutY="106.0" prefWidth="200.0" />
      
      <Label layoutX="400.0" layoutY="150.0" text="Época:" />
      <ComboBox fx:id="cmb3" layoutX="500.0" layoutY="146.0" prefWidth="200.0" />
      
      <Label layoutX="50.0" layoutY="190.0" text="Categoría:" />
      <RadioButton fx:id="rb1" layoutX="150.0" layoutY="190.0" text="Antigua">
         <toggleGroup>
            <ToggleGroup fx:id="categoria" />
         </toggleGroup>
      </RadioButton>
      <RadioButton fx:id="rb2" layoutX="250.0" layoutY="190.0" text="Conmemorativa" toggleGroup="$categoria" />
      <RadioButton fx:id="rb3" layoutX="390.0" layoutY="190.0" text="Griega" toggleGroup="$categoria" />
      
      <Label layoutX="50.0" layoutY="230.0" text="Características:" />
      <Group fx:id="GroupChkBox" layoutX="150.0" layoutY="230.0">
         <children>
            <CheckBox fx:id="chkbox1" text="Edición Limitada" layoutY="0.0" />
            <CheckBox fx:id="chkbox2" text="Autenticada" layoutY="25.0" />
            <CheckBox fx:id="chkbox3" text="Conservación Especial" layoutY="50.0" />
         </children>
      </Group>
      
      <Label layoutX="400.0" layoutY="230.0" text="País:" />
      <ComboBox fx:id="cmbPais" layoutX="500.0" layoutY="226.0" prefWidth="200.0" />
      
      <Label layoutX="400.0" layoutY="270.0" text="Protector:" />
      <ComboBox fx:id="cmbProtector" layoutX="500.0" layoutY="266.0" prefWidth="200.0" />
      
      <Button fx:id="btt1" layoutX="50.0" layoutY="320.0" onAction="#press1" prefWidth="100.0" text="Crear" />
      <Button fx:id="btt2" layoutX="170.0" layoutY="320.0" onAction="#press2" prefWidth="100.0" text="Guardar" />
      <Button fx:id="btt3" layoutX="290.0" layoutY="320.0" onAction="#press3" prefWidth="100.0" text="Cargar" />
      <Button fx:id="btt4" layoutX="410.0" layoutY="320.0" onAction="#press4" prefWidth="100.0" text="Actualizar" />
      <Button fx:id="btt5" layoutX="530.0" layoutY="320.0" onAction="#press5" prefWidth="100.0" text="Eliminar" />
      
      <TableView fx:id="tblView" layoutX="50.0" layoutY="370.0" onMouseClicked="#displaySelected" prefHeight="300.0" prefWidth="800.0">
         <columns>
            <TableColumn fx:id="column1" prefWidth="100.0" text="Serial" />
            <TableColumn fx:id="column2" prefWidth="120.0" text="Material" />
            <TableColumn fx:id="column3" prefWidth="100.0" text="Tamaño" />
            <TableColumn fx:id="column4" prefWidth="100.0" text="Valor" />
            <TableColumn fx:id="column5" prefWidth="80.0" text="Año" />
            <TableColumn fx:id="column6" prefWidth="120.0" text="Tipo" />
            <TableColumn fx:id="column7" prefWidth="180.0" text="Categoría" />
         </columns>
      </TableView>
   </children>
</AnchorPane>